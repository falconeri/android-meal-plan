<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/af_list_row_bg"
        android:ellipsize="end"
        android:padding="@dimen/value_15dp"
        android:text="All Computer"
        android:textColor="@drawable/af_clickable_text_bg"
        android:textSize="@dimen/value_13sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/value_20dp"
        android:layout_marginRight="@dimen/value_20dp"
        android:src="@drawable/ic_arrow" />

</RelativeLayout>